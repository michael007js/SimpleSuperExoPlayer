<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/exo_background_color"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_columnView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="柱状图" />

                <RadioButton
                    android:id="@+id/rb_glow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发光跳动线" />

                <RadioButton
                    android:id="@+id/rb_columnView_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3D柱状图" />

                <RadioButton
                    android:id="@+id/rb_ringWare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环形能量波纹" />

                <RadioButton
                    android:id="@+id/rb_ringColumnWare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环形柱状水波纹" />
            </RadioGroup>


        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <com.sss.michael.exo.spectrum.ExoSpectrumColumnView
                android:id="@+id/columnView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.sss.michael.exo.spectrum.ExoJumpLineGlowSpectrumView
                android:id="@+id/glow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.sss.michael.exo.spectrum.ExoSpectrum3DColumnView
                android:id="@+id/column3DView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.sss.michael.exo.spectrum.ExoSpectrumRingWareView
                android:id="@+id/ringWare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.sss.michael.exo.spectrum.ExoSpectrumRingColumnWareView
                android:id="@+id/ringColumnWare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </FrameLayout>

        <com.sss.michael.exo.widget.ExoEqPanelView
            android:id="@+id/eq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true" />
    </LinearLayout>
</layout>
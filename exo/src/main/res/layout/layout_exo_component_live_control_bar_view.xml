<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_exo_controller_bar_bottom_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:src="@drawable/exo_ic_action_play" />

            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:src="@drawable/exo_ic_action_autorenew" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_full_screen"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:src="@drawable/exo_ic_action_fullscreen" />

            <TextView
                android:id="@+id/eq"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/bg_exo_stroke_1_radius_4_ffffff"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="EQ"
                android:textColor="@color/exo_white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/debug"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_exo_stroke_1_radius_4_ffffff"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="调试"
                android:textColor="@color/exo_white"
                android:textSize="10dp" />

        </LinearLayout>

    </FrameLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_exo_controller_bar_bottom_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:src="@drawable/exo_ic_action_play" />

            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:src="@drawable/exo_ic_action_autorenew"
                android:visibility="gone" />

            <TextView
                android:id="@+id/curr_time"
                style="@style/exo_textColor_ffffff_textSize_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />

            <cn.sss.michael.exo.widget.ExoSeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:max="1000" />

            <TextView
                android:id="@+id/total_time"
                style="@style/exo_textColor_ffffff_textSize_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />

            <TextView
                android:id="@+id/tv_speed"
                style="@style/exo_textColor_ffffff_textSize_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:clickable="true"
                android:padding="10dp"
                android:text="倍速"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_full_screen"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:src="@drawable/exo_ic_action_fullscreen" />

            <TextView
                android:id="@+id/speed"
                style="@style/exo_textColor_ffffff_textSize_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="倍速" />

            <TextView
                android:id="@+id/eq"
                style="@style/exo_textColor_ffffff_textSize_10"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_exo_stroke_1_radius_4_ffffff"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="EQ" />


            <TextView
                android:id="@+id/debug"
                style="@style/exo_textColor_ffffff_textSize_10"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_exo_stroke_1_radius_4_ffffff"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="调试" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/bottom_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:max="1000"
            android:progressDrawable="@drawable/exo_layer_progress_bar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_play_location_last_time"
            style="@style/exo_textColor_ffffff_textSize_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="46dp"
            android:background="@drawable/exo_location_last_play_time"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="继续上次播放"
            android:visibility="gone" />
    </FrameLayout>
</layout>